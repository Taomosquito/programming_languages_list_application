<h2>Edit Programming Language</h2>

<%= form_with model: @resource, local: true do |form| %>
<div>
  <%= form.label :title %>
  <%= form.text_field :title, required: true %>
</div>

<div>
  <%= form.label :description %>
  <%= form.text_area :description, required: true %>
</div>

<div>
  <%= form.label :link %>
  <%= form.text_field :link, required: true %>
</div>

<div>
  <%= form.submit 'Update Language' %>
</div>
<% end %>

<%= link_to 'Back to Language Details', resource_path(@resource), class: 'button' %>